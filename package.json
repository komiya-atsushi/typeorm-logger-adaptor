    "jest-junit": "^16.0.0",
    "jest-mock-extended": "^3.0.4",
    "mysql2": "^2.2.5",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.0.0",
    "typeorm": "^0.3.0",
    "winston": "^3.0.0"
