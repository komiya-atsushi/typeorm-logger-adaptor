{
  "name": "typeorm-logger-adaptor",
  "version": "1.1.0",
  "description": "Logger adaptors for TypeORM",
  "author": {
    "name": "KOMIYA Atsushi",
    "url": "https://github.com/komiya-atsushi"
  },
  "repository": {
    "type": "git",
